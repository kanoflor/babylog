{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "Node16",
    "target": "esnext",
    "lib": ["esnext"],
    "jsx": "react-native",
    "moduleResolution": "node16",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["jest"]
  },
  "include": ["apps/mobile/app", "src", "types", "store", "hooks", "utils"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
